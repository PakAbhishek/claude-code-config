{
  "provider": "bedrock",
  "model": "us.anthropic.claude-opus-4-5-20251101-v1:0",
  "env": {
    "CLAUDE_CODE_USE_BEDROCK": "1",
    "AWS_REGION": "us-east-1"
  },
  "mcpServers": {
    "hindsight": {
      "transport": "sse",
      "url": "http://34.174.13.163:8888/mcp/claude-code/"
    }
  },
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node \"$HOME/.claude/hooks/sync-claude-md.js\"",
            "timeout": 10
          },
          {
            "type": "command",
            "command": "node \"$HOME/.claude/hooks/check-aws-sso.js\"",
            "timeout": 120
          }
        ]
      },
      {
        "hooks": [
          {
            "type": "command",
            "command": "node \"$HOME/.claude/hooks/protocol-reminder.js\"",
            "timeout": 5
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": "node \"$HOME/.claude/hooks/check-edit-token.js\"",
            "timeout": 5
          }
        ]
      },
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "node \"$HOME/.claude/hooks/check-edit-token.js\"",
            "timeout": 5
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "node \"$HOME/.claude/hooks/check-commit-gate.js\"",
            "timeout": 5
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "node \"$HOME/.claude/hooks/hindsight/capture.js\"",
            "timeout": 5
          }
        ]
      },
      {
        "matcher": "Task",
        "hooks": [
          {
            "type": "command",
            "command": "node \"$HOME/.claude/hooks/grant-edit-token.js\"",
            "timeout": 10
          }
        ]
      },
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": "node \"$HOME/.claude/hooks/track-edit.js\"",
            "timeout": 5
          }
        ]
      },
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "node \"$HOME/.claude/hooks/track-edit.js\"",
            "timeout": 5
          }
        ]
      }
    ]
  },
  "permissions": {
    "deny": [
      "mcp__ado__wit_create_work_item",
      "mcp__ado__wit_update_work_item",
      "mcp__ado__wit_update_work_items_batch",
      "mcp__ado__wit_add_work_item_comment"
    ]
  }
}
