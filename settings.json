{
  "env": {
    "CLAUDE_CODE_USE_BEDROCK": "1",
    "AWS_REGION": "us-east-1"
  },
  "permissions": {
    "deny": [
      "mcp__ado__wit_create_work_item",
      "mcp__ado__wit_update_work_item",
      "mcp__ado__wit_update_work_items_batch",
      "mcp__ado__wit_add_work_item_comment"
    ]
  },
  "model": "us.anthropic.claude-opus-4-5-20251101-v1:0",
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node \"C:\\Users\\achau\\.claude\\hooks/sync-claude-md.js\"",
            "timeout": 10
          },
          {
            "type": "command",
            "command": "node \"C:\\Users\\achau\\.claude\\hooks/check-aws-sso.js\"",
            "timeout": 120
          }
        ]
      },
      {
        "hooks": [
          {
            "type": "command",
            "command": "node \"C:\\Users\\achau\\.claude\\hooks/protocol-reminder.js\"",
            "timeout": 5
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": "node \"C:\\Users\\achau\\.claude\\hooks/check-edit-token.js\"",
            "timeout": 5
          }
        ]
      },
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "node \"C:\\Users\\achau\\.claude\\hooks/check-edit-token.js\"",
            "timeout": 5
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "node \"C:\\Users\\achau\\.claude\\hooks/check-testing-shortcut.js\"",
            "timeout": 5
          },
          {
            "type": "command",
            "command": "node \"C:\\Users\\achau\\.claude\\hooks/check-git-operations.js\"",
            "timeout": 5
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Task",
        "hooks": [
          {
            "type": "command",
            "command": "node \"C:\\Users\\achau\\.claude\\hooks/clear-review-flags.js\"",
            "timeout": 10
          }
        ]
      },
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": "node \"C:\\Users\\achau\\.claude\\hooks/track-file-types.js\"",
            "timeout": 5
          }
        ]
      },
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "node \"C:\\Users\\achau\\.claude\\hooks/track-file-types.js\"",
            "timeout": 5
          }
        ]
      }
    ]
  },
  "provider": "bedrock",
  "mcpServers": {
    "hindsight": {
      "url": "http://hindsight-achau.southcentralus.azurecontainer.io:8888/mcp/claude-code/"
    }
  }
}
